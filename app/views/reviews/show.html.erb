<%= render 'shared/page_title', title: @review.name %>
<p class="center">Movie: <%= @review.movie %></p>
<div class="well col-md-8 col-md-offset-2">
  <h4 class="center description"><strong>Description: </strong></h4>
  <hr />
  <%= simple_format(@review.description) %>
  <p>
    Created by:
  </p>
  <p>
    <small><%= @review.user.name %></small>
    <div class="pull-right">created: <%= time_ago_in_words(@review.created_at) %></div>
  </p>
  
  <br>
  <h2> Comments </h2>
    <%= render @review.comments %>
    <h3>Add a comment</h3>
    <%= render 'comments/form' %>

  <div class="review-actions">
    <%= link_to "Edit" , edit_review_path(@review), class:"btn btn-xs btn-warning" %>
    <%= link_to "Delete", review_path(@review), method: :delete,
                          data: { confirm: "Are you sure you want to delete this review?"},
                          class: "btn btn-xs btn-danger" %>
  </div>
  
  
</div>
